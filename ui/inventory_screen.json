/*********************************************
          Gote-Supporter by Yuka0745
*********************************************/
{
  "namespace": "crafting",

  "status_bar": {
    "type": "panel",
    "offset": [ 0, 30 ],
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "size": [ 180, 20 ],
    "controls": [
      {
        "heart_rend@hud.heart_renderer": {
          "offset": [ -1, -40 ],
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left"
        }
      },
      {
        "armor_rend@hud.armor_renderer": {
          "offset": [ -1, -40 ],
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left"
        }
      },
      {
        "hunger_rend@hud.hunger_renderer": {
          "offset": [ 180, -40 ],
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left"
        }
      },
      {
        "bubbles_rend_0@hud.bubbles_renderer": {
          "offset": [ 180, -50 ],
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left"
        }
      }
    ]
  },

  "delital_panel": {
    "type": "image",
    "texture": "textures/ui/purpleBorder",
    "size": [ 100, "100%c" ],
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "layer": 100,
    "alpha": 0.8,
    "offset": [ -2, 2 ],
    "ignored": "(not $creator_mode)",
    "controls": [
      {
        "type": {
          "type": "stack_panel",
          "size": [ "100% - 4px", "100%c  2px" ],
          "offset": [ 2, 2 ],
          "controls": [
            {
              "label": {
                "type": "label",
                "text": "§b選択中のアイテム",
                "font_type": "unicode"
              }
            },
            {
              "item_rend": {
                "type": "panel",
                "size": [ "100%", 16 ],
                "controls": [
                  {
                    "item_render": {
                      "type": "image",
                      "size": [ 16, 16 ],
                      "texture": "textures/ui/cell_image",
                      "controls": [
                        {
                          "item@common.inventory_selected_icon": {
                            "offset": [ 0, 0 ],
                            "size": [ 14, 14 ],
                            "layer": 101
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "padding1": {
                "type": "panel",
                "size": [ 0, 5 ]
              }
            },
            {
              "labe2": {
                "type": "label",
                "text": "#text",
                "font_type": "unicode",
                "bindings": [
                  {
                    "binding_type": "global",
                    "binding_name": "#inventory_selected_item"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "('Item ID Aux: §a' + #inventory_selected_item)",
                    "target_property_name": "#text"
                  }
                ]
              }
            },
            {
              "stack_count_1": {
                "type": "label",
                "text": "Stack Count: §a1",
                "font_type": "unicode",
                "bindings": [
                  {
                    "binding_name": "(#inventory_selected_item_stack_count = '')",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "stack_count_2": {
                "type": "label",
                "text": "#text",
                "font_type": "unicode",
                "bindings": [
                  {
                    "binding_name": "#inventory_selected_item_stack_count",
                    "binding_condition": "always_when_visible"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "('Stack Count: §a' + #inventory_selected_item_stack_count)",
                    "target_property_name": "#text"
                  },
                  {
                    "binding_name": "(not (#inventory_selected_item_stack_count = ''))",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "charged": {
                "type": "label",
                "text": "#text",
                "font_type": "unicode",
                "bindings": [
                  {
                    "binding_type": "global",
                    "binding_name": "#inventory_selected_item_charged_item"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "('Charged: §a' + #inventory_selected_item_charged_item)",
                    "target_property_name": "#text"
                  }
                ]
              }
            },
            {
              "footer_padding": {
                "type": "panel",
                "size": [ 0, 5 ]
              }
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_type": "global",
        "binding_name": "#inventory_selected_item"
      },
      {
        "binding_type": "view",
        "source_property_name": "(not (#inventory_selected_item = -1))",
        "target_property_name": "#visible"
      }
    ]
  },

  "recipe_inventory_screen_content": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          {
            "status_bar@crafting.status_bar": {
              "bindings": []
            }
          },
          {
            "delital_panel@crafting.delital_panel": {}
          }
        ]
      }
    ]
  }
}